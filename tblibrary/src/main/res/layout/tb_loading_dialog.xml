<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.flyco.roundview.RoundLinearLayout
            app:rv_cornerRadius="@dimen/x25"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            app:rv_backgroundColor="@color/tb_transparent_half"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/mProgressBar"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:indeterminateDrawable="@drawable/loading_white"
                android:progress="50" />

            <TextView
                android:id="@+id/mProgressBarDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="@string/loading"
                android:textColor="@color/tb_white"
                android:textSize="@dimen/tb_text26" />


        </com.flyco.roundview.RoundLinearLayout>


    </LinearLayout>

</layout>