<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/x50"
        android:paddingBottom="@dimen/x50"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mErrorImg"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:src="@drawable/icon_load_error" />

        <TextView
            android:id="@+id/mErrorDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="@string/loadError"
            android:textColor="@color/tb_text_black"
            android:textSize="@dimen/tb_text28" />

    </LinearLayout>


</layout>

